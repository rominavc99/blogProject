<!DOCTYPE html>

<html>
  <%- include("partials/header.ejs") %>
  <main class="container">
    <form action="/create" method="POST" class="container p-5">
      <div class="mb-3">
        <label for="inputTitle" class="form-label">Blog Title</label>
        <input
          type="title"
          class="form-control"
          id="inputTitle"
          name="inputTitle"
          required
        />
      </div>

      <div class="mb-3">
        <label for="content" class="form-label">Content</label>
        <input
          type="title"
          class="form-control"
          id="content"
          name="content"
          required
        />
      </div>

      <div class="mb-3">
        <label for="content" class="form-label">Autor</label>
        <input
          type="title"
          class="form-control"
          id="autor"
          name="autor"
          required
        />
      </div>

      <button type="submit" method="POST" class="btn btn-primary">
        Submit
      </button>
    </form>
  </main>
  <%- include("partials/footer.ejs") %>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"
  ></script>
</html>
